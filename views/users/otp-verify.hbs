<link href="/stylesheets/signup.css" rel="stylesheet" />
<style>

  .forget-container{ display: flex; justify-content: center; align-items:
  center; } .forget-logo{ display: block; margin: 0 auto; max-height: 81px; }
</style>
<div class="wrapper">
  <div class="forget-container"><img class="forget-logo" src="" alt="" /></div>

  <div class="title-text">
    <div class="title reset-password">OTP VERIFICATION</div>

  </div>
  <div class="form-inner">

    <form action="/" method="post" class="login">
      <div class="field">
        <input type="number" name="otp" placeholder="otp" required />
      </div>

      <div class="field btn">
        <div class="btn-layer"></div>
        <input type="submit" value="SUBMIT OTP" />
      </div>

      {{#if message}}
        <p><span
            style="font-family: Arial, sans-serif; color: green; display:inline-block"
          >{{message}}</span></p>

      {{/if}}
    </form>
  </div>
</div>